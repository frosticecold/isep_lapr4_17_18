<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <ui:with field="res" type="pt.isep.nsheets.client.resources.AppResources" />
    
    <ui:with field="tokens" type="pt.isep.nsheets.client.place.NameTokens"/> 
    
    <m:MaterialPanel>
        <g:HTMLPanel ui:field="htmlPanel">
            <m:MaterialTextBox ui:field="title" label="Note Title" length="50"/>
            <m:MaterialTextArea ui:field="description" label="Note Description" resizeRule="FOCUS"/>
            <m:MaterialButton ui:field="btnNewList" text="Create" textColor="WHITE" float="RIGHT" backgroundColor="ORANGE" type="FLAT" waves="DEFAULT" enabled="false" />
        </g:HTMLPanel>
    </m:MaterialPanel>
    
</ui:UiBinder>
